{
  "build": {
    "command": "npm run build",
    "publish": ".next",
    "functions": "functions",
    "watch_paths": ["app/**/*"]
  },
  "env": {
    "production": {
      "name": "advancia-payledger-prod",
      "routes": [
        {
          "pattern": "advancia.io",
          "zone_name": "advancia.io"
        }
      ],
      "vars": {
        "ENVIRONMENT": "production",
        "API_URL": "https://api.advancia.io",
        "ANALYTICS_ID": "your-analytics-id"
      }
    },
    "staging": {
      "name": "advancia-payledger-staging",
      "routes": [
        {
          "pattern": "staging.advancia.io",
          "zone_name": "advancia.io"
        }
      ],
      "vars": {
        "ENVIRONMENT": "staging",
        "API_URL": "https://staging-api.advancia.io",
        "ANALYTICS_ID": "staging-analytics-id"
      }
    }
  }
}
